
#ace
  font-family 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace !important
  font-size 1.25em
  z-index: 1

.vertical #ace
  width 50%

.horizontal #ace
  height 50%

//custom ace
.ace_scrollbar
  display none !important

.ace_warning
  background: rgba(255, 50, 50, 0.1);
  position: absolute;
  width: 100% !important;
  left: 0 !important;